<center>
<h1> Ton profil </h1>
<br>
<p> Prénom : <%= @user.first_name %></p>
<p> Nom de famille : <%= @user.last_name %></p>
<p> Description : <%= @user.description %></p>
<p> E-mail de contact : <%= @user.email %></p>
<p> Date de création du compte : <%= @user.created_at %></p>
<br>
<h3>Photo de profil</h3>
<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar', width: "250px", class: "rounded-avatar" %>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
<%end%>
<h3>Changer la photo ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour", class: "btn btn-dark" %>
<% end %>
<br>
<h3> Tes évènements : </h3>

<% @user.events.each do |event| %>
  <%= event.title %> : <%= link_to "Voir l'évènement", event_path(event) %> </br>
<% end %>

<%= link_to "Edition du compte", edit_user_registration_path(current_user) %>
</center>