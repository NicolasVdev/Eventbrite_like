<center>
<div class="card bg-light mb-3 border-secondary drop_marge_top" style="max-width: 30rem;">
  <div class="card-header bg-dark text-white"><h2>Création d'un évènement</h2></div>
  <div class="card-body">


  <%= form_for @event do |f| %>

    <div class="form-group">
      <%= f.label "Date de début" %><br />
      <%= f.datetime_select :start_date, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label "Titre" %><br />
      <%= f.text_field :title, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label "Lieu" %><br />  
      <%= f.text_field :location, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label "Description" %><br />
      <%= f.text_area :description, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label "Prix" %><br />
      <%= f.number_field :price, class: "form-control" %>
    </div><br>

    <div class="form-group">
      <%= f.label "Durée" %><br />
      <%= f.number_field :duration, class: "form-control", step:5, min:5 %>
    </div><br>

    <div class="form-actions">
      <%= f.submit "Créer", class: "btn btn-success" %>
    </div>
  <% end %>

</div>
</div>
</center>